model PersonalInfo {
  id         Int       @id @default(1)
  name       String
  title      String
  bio        String
  email      String
  phone      String
  location   String
  linkedin   String
  github     String
  website    String
  resumeUrl  String?
  resumeType String?
  resumeName String?
  resumeSize String?
  uploadDate DateTime?
}

model AdminAuth {
  id        Int       @id @default(1)
  username  String    @unique @default("admin")
  password  String
  lastLogin DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
